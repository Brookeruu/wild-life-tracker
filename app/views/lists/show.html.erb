<h1><%= @list.name %></h1>

<% if @list.sightings.any? %>
  <h4>Here are the sightings of this animal:</h4>

  <ul>
    <% @list.sightings.each do |sighting| %>
    <li>
      <%= sighting.description %> |
      <%= link_to "Edit", edit_list_sighting_path(@list, sighting) %> |
      <%= link_to "Delete", list_sighting_path(@list, sighting),
                              :data => {:confirm => "You sure?",
                                        :method => "delete"} %></p>

    </li>
    <% end %>
  </ul>

<% else %>
  <p>There aren't any sightings yet!</p>
<% end %>

